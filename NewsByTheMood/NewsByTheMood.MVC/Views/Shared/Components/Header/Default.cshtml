@model HeaderModel

<header class="sticky-top mb-5">
    <nav class="header navbar navbar-expand-sm shadow-sm rounded">
        <div class="container-fluid justify-content-between">
            <div class="col-auto">
                <a class="navbar-brand" asp-area="" asp-controller="home" asp-action="index">
                    <img src="~/images/newsbythemood-logo.webp" alt="NewsByTheMood" style="width: 50px; height: 50px;" />
                </a>
            </div>
            <div class="col-auto">
                <button class="navbar-toggler text-center" type="button" data-bs-toggle="collapse" data-bs-target="#headerNavBar"
                aria-controls="headerNavBar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">
                        <i class="bi bi-grid-fill"></i>
                    </span>
                </button>
                <div class="navbar-collapse collapse" id="headerNavBar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-area="" asp-controller="home" asp-action="index"
                            class="nav-link @(ViewContext.HttpContext.Request.Path.ToString().ToLower() == "/" ? "active" : "")">
                                Latest
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="headerNavBarTopics" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Topics
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="headerNavBarTopics">
                                @foreach (var topic in Model.Topics)
                                {
                                    <li>
                                        <a asp-area="" asp-controller="home" asp-action="topic" asp-route-id="@topic.Name" class="dropdown-item">
                                            <i class="fs-4 @topic.IconCssClass"></i>
                                            <span class="ms-1 d-none d-xl-inline">
                                                @topic.Name
                                            </span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                        <li class="nav-item">
                            @if (Model.UserPreview != null)
                            {
                                <a asp-area="" asp-controller="home" asp-action="trending"
                                    class="nav-link @(ViewContext.HttpContext.Request.Path.ToString().ToLower() == "/trending" ? "active" : "")">
                                    Trending
                                </a> @*за последние пару дней с высоким песещением*@
                            }
                            else
                            {
                                <a asp-area="identity" asp-page="/account/login"
                                   class="nav-link @(ViewContext.HttpContext.Request.Path.ToString().ToLower() == "/trending" ? "active" : "")">
                                    Trending
                                </a> @*за последние пару дней с высоким песещением*@
                            }
                        </li>
                        <li class="nav-item">
                            @if (Model.UserPreview != null)
                            {
                                <a asp-area="" asp-controller="home" asp-action="favorite"
                                class="nav-link @(ViewContext.HttpContext.Request.Path.ToString().ToLower() == "/favorite" ? "active" : "")">
                                    Favorite
                                </a> @*по настройкам пользователя*@
                            }
                            else
                            {
                                <a asp-area="identity" asp-page="/account/login"
                                   class="nav-link @(ViewContext.HttpContext.Request.Path.ToString().ToLower() == "/favorite" ? "active" : "")">
                                    Favorite
                                </a> @*по настройкам пользователя*@
                            }
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-auto">
                @if (Model.UserPreview != null)
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Account</a>
                    </li>
                }
            </div>
        </div>
    </nav>
</header>