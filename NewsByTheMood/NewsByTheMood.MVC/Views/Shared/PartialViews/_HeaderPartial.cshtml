<header class="sticky-top mb-5">
    <nav class="header navbar navbar-expand-sm shadow-sm rounded">
        <div class="container-fluid justify-content-between">
            <div class="col-auto">
                <a class="navbar-brand" asp-area="" asp-controller="home" asp-action="index">
                    <img src="~/images/newsbythemood-logo.webp" alt="NewsByTheMood" style="width: 50px; height: 50px;" />
                </a>
            </div>
            <div class="col-auto">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#headerNavBar"
                        aria-controls="headerNavBar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">
                        <i class="bi bi-filter-left"></i>
                    </span>
                </button>
                <div class="navbar-collapse collapse" id="headerNavBar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-area="" asp-controller="home" asp-action="index"
                               class="nav-link @(ViewContext.RouteData.Values["Action"].ToString().ToLower() == "index" ? "active" : "")">
                                Latest
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="headerNavBarTopics" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Topics
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="headerNavBarTopics">
                                @await Component.InvokeAsync("TopicsList")
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="home" asp-action="trending"
                               class="nav-link @(ViewContext.RouteData.Values["Action"].ToString().ToLower() == "trending" ? "active" : "")">
                                Trending
                            </a> @*за последние пару дней с высоким песещением*@
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="home" asp-action="favorite"
                               class="nav-link @(ViewContext.RouteData.Values["Action"].ToString().ToLower() == "favorite" ? "active" : "")">
                                Favorite
                            </a> @*по настройкам пользователя*@
                        </li>
                        @* <li class="nav-item">
                        <a asp-area="" asp-controller="home" asp-action="hot" 
                            class="nav-link @(ViewContext.RouteData.Values["Action"].ToString().ToLower() == "hot" ? "active" : "")">
                            Hot
                        </a> 
                    </li> *@ @*за последние пару дней с высоким рейтингом*@
                    </ul>
                </div>
            </div>
            <div class="col-auto">
                Account
            </div>
        </div>
    </nav>
</header>