@model SourceCollectionModel
@{
	ViewData["PageTitle"] = "Sources";
}

<div class="sources container">
    <div class="topic__header d-flex row mb-5">
        <h4 class="mb-0">Sources</h4>
    </div>
    <div class="topics__panel row align-items-start justify-content-start mb-4">
        <div class="col-auto">
            <a asp-controller="sources" asp-action="create" class="btn btn-primary">Create</a>
        </div>
    </div>
    <div class="sources__list mb-4">
            @foreach (var sourcePreview in Model.SourcePreviews)
            {
            <div class="source-preview row justify-content-start align-items-center mb-3">
                    <div class="col-auto">@sourcePreview.Name</div>
                    <div class="col-auto">@sourcePreview.Topic</div>
                    <div class="col-auto">
                        <span>related articles </span>
                        <span class="badge bg-primary rounded-pill">@sourcePreview.ArticleAmmount</span>
                    </div>
                    <div class="col-auto">
                        <a asp-controller="sources" asp-action="edit" asp-route-id="@sourcePreview.Id" class="btn btn-primary">Edit</a>
                    </div>
            </div>
            }
        </div>
    </div>
    @if (Model.PageInfo.TotalPages > 1)
    {
        <div class="topic__pagination row align-items-center justify-content-center mb-4">
            <div class="col-auto">
                <pagination page-action="index" page-info="@Model.PageInfo"></pagination>
            </div>
        </div>
    }
</div>
