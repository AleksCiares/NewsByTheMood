@model SignupModel
@{
	ViewData["Title"] = "Sign up";
}

<div class="signup">
	<div class="signup-title">
		<h2>Sing up</h2>
	</div>
	<div class="singup-form">
		<form asp-action="Index" asp-controller="Signup" method="post">
			<div class="singup-form_username">
				<label asp-for="UserName">User name</label>
				<input asp-for="UserName" type="text"/>
				<span asp-validation-for="UserName"></span>
			</div>
			<div class="singup-form_email">
				<label asp-for="Email">Email</label>
				<input asp-for="Email" type="email" />
				<span asp-validation-for="Email"></span>
			</div>
			<div class="singup-form_pass">
				<label asp-for="Password">Password</label>
				<input asp-for="Password" type="password" />
				<span asp-validation-for="Password"></span>
			</div>
			<div class="singup-form_passconfirm">
				<label asp-for="PasswordConfirmation">Password confirmation</label>
				<input asp-for="PasswordConfirmation" type="password" />
				<span asp-validation-for="PasswordConfirmation"></span>
			</div>
			<div class="singup-form_submit">
				<input type="submit"/>
			</div>
		</form>
	</div>
</div>
