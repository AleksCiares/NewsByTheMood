@model TopicCollectionModel
@{
	ViewData["PageTitle"] = "Topics";
}

<div class="topics container">
	<div class="topic__header d-flex row mb-5">
		<h4 class="mb-0">Topics</h4>
	</div>
	<div class="topics__panel row align-items-start justify-content-start mb-4">
		<div class="col-auto">
			<a asp-controller="topics" asp-action="create" class="btn btn-primary">Create</a>
		</div>
	</div>
	<div class="topics__list row row-cols-4 row-cols-sm-6 row-cols-md-8 row-cols-lg-10 mb-4">
		@foreach (var topic in Model.Topics)
		{
			<div class="topics__preview col mb-3 rounded">
				<div class="card text-center">
					<div class="card-header">
						@topic.Name
					</div>
					<div class="card-body">
						<i class="fs-4 @topic.IconCssClass"></i> <span class="ms-1 d-none d-sm-inline"></span>
					</div>
					<div class="card-footer">
						<a asp-controller="topics" asp-action="edit" asp-route-id="@topic.Id" class="btn btn-primary">Edit</a>
					</div>
				</div>
			</div>
		}
	</div>
	@if (Model.PageInfo.TotalPages > 1)
	{
		<div class="topic__pagination row align-items-center justify-content-center mb-4">
			<div class="col-auto">
				<pagination page-action="index" page-info="@Model.PageInfo"></pagination>
			</div>
		</div>
	}
</div>