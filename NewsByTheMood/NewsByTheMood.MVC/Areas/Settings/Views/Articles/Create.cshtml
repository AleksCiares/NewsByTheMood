@model ArticleSettingsCreateModel
@{
	ViewData["PageTitle"] = "Create a article";
}

<div class="article container">
	<div class="article__header d-flex row mb-5">
		<h4 class="mb-0">Create a article</h4>
	</div>
	<form asp-antiforgery="true" method="post">
		<div class="form__panel row align-items-start justify-content-between mb-4">
			<div class="col-auto">
				<button asp-area="settings" asp-controller="articles" asp-action="create" type="submit" class="btn btn-outline-primary">Submit</button>
				<a asp-area="settings" asp-controller="articles" asp-action="index" class="btn btn-outline-secondary">Cancel</a>
			</div>
		</div>
		<div class="form__body row align-items-start justify-content-start mb-4">
			<div class="form__warp">
				<partial name="_ArticleFormPartial" model="@Model" />
				<div class="id form-floating mb-3" style="display:none;">
					<input asp-for="@Model.Article.Id" type="number" value="0" class="form-control" />
				</div>
			</div>
		</div>
	</form>
</div>

@section Scripts {
	<script src="~/js/article-form.js" asp-append-version="true"></script>
}