@model ArticleSettingsEditModel
@{
	ViewData["PageTitle"] = $"{Model.Article.Title} - Editing";
}

<div class="article container">
	<div class="article__header d-flex row mb-5">
		<h4 class="mb-0">@Model.Article.Title</h4>
	</div>
	<form asp-antiforgery="true" method="post">
		<div class="form__panel row align-items-start justify-content-between mb-4">
			<div class="col-auto">
				<button asp-area="settings" asp-controller="articles" asp-action="edit" type="submit" class="btn btn-outline-primary">Submit</button>
				<a asp-area="settings" asp-controller="articles" asp-action="index" class="btn btn-outline-secondary">Cancel</a>
			</div>
			<div class="col-auto">
				<button formnovalidate asp-area="settings" asp-controller="articles" asp-action="delete" asp-route-id="@Model.Article.Id" class="btn btn-danger">Delete</button>
			</div>
		</div>
		<div class="form__body row align-items-start justify-content-start mb-4">
			<div class="form__warp">
				<partial name="_ArticleFormPartial" model="@(new ArticleSettingsCreateModel(){ Article = Model.Article, Sources = Model.Sources, Tags = Model.Tags})" />
				<div class="id form-floating mb-3" style="display:none;">
					<input asp-for="@Model.Article.Id" type="number" value="@Model.Article.Id" class="form-control" />
				</div>
			</div>
		</div>
	</form>
</div>

@section Scripts {
	<script src="~/js/article-edit.js" asp-append-version="true"></script>
}